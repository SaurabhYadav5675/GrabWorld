<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pro_Mobile">
    <ImageView
        android:baseline="@dimen/dp_10"
        android:focusable="true"
        android:layout_marginTop="@dimen/sp_20"
        android:id="@+id/Pro_mobile"
        android:src="@drawable/oppo"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    <RelativeLayout
        android:id="@+id/Pro_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/Pro_mobile"
        android:background="@color/App_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/User_img"
            android:src="@drawable/black_user"
            android:layout_margin="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/User_Mname"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@+id/User_img"
            android:textSize="15dp"
            android:text="Name:-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/User_img" />

        <TextView

            android:id="@+id/User_MName1"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/sp_20"
            android:layout_toEndOf="@+id/User_Mname"
            android:textSize="15dp"
            android:text="Vikas Singh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/User_img" />

        <TextView

            android:id="@+id/User_MEmail"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_below="@id/User_Mname"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@+id/User_img"
            android:textSize="15dp"
            android:text="Email:-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/User_img" />

        <TextView
            android:id="@+id/User_MEmail1"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/sp_20"
            android:layout_below="@+id/User_MName1"
            android:layout_toEndOf="@+id/User_MEmail"
            android:textSize="15dp"
            android:text="Vikassingh28@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/User_img" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/Pro_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:text="Oppo F9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/sp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>
                <EditText
                    android:text="Price:-15000/-"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/Descri"
                    android:text="4GB RAM and 64 GB ROM Battery:3500mAh 16MP+2MP Duai Rear and 16MP fornt camers"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/MPhoneCalls"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/phone_icon"
        android:layout_marginRight="@dimen/sp_20"
        android:layout_width="60dp"
        android:layout_height="60dp" />


</RelativeLayout>